{
    "name": "cross-run",
    "description": "Utility to run commands with cross-platform environment variable expansion.",
    "version": "0.1.0",
    "author": {
        "name": "Christian Sdunek",
        "email": "me@systemcluster.me"
    },
    "license": "BSD-2-Clause",
    "private": true,
    "repository": {
        "type": "git",
        "url": "github:systemcluster/cross-run"
    },
    "engines": {
        "node": ">=18"
    },
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "cross-run": "dist/bin.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "prepare": "tsc && swc --sync -d dist src",
        "check": "tsc --noEmit --emitDeclarationOnly false && eslint src",
        "check:lint": "eslint src",
        "check:types": "tsc --noEmit --emitDeclarationOnly false",
        "check:fix": "eslint --fix src",
        "build": "npm run clean && npm run prepare",
        "test:run": "npm run build && node dist/bin.js --help && node dist/bin.js -e echo $TEMP test && node dist/bin.js TEST=\"foo bar\" echo %TEST% --test"
    },
    "dependencies": {
        "commander": "^11.0.0",
        "dotenv": "^16.3.1",
        "dotenv-expand": "^10.0.0",
        "minimatch": "^9.0.3",
        "shlex": "^2.1.2",
        "which": "^3.0.1"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.75",
        "@systemcluster/eslint-config": "github:systemcluster/eslint-config",
        "@types/node": "^20.4.9",
        "@types/which": "^3.0.0",
        "eslint": "^8.46.0",
        "rimraf": "^5.0.1",
        "typescript": "^5.1.6"
    }
}
